extends _layout.jade
include _mixin/entry_list.jade

block head
    title= "Archive | " + config.title

block content
    -var time
    -page.posts.each(function(post, index){
        if index === page.posts.length - 1
            -post.isLast = true
        -post.pageType = "archive"
        -var postDate = post.date.year()
        if time !== postDate
            -time = postDate
            h2.archives-date
                = time
        +renderPostList(post)
    -})