.header {
  position: relative;
  margin: 0 auto;
  width: 960px;

  +mobile() {
    width: auto;
  }
}

.header-inner {
  position: absolute;
  top: 0;
  overflow: hidden;
  padding: 0;
  width: 240px;
  background: white;

  +desktop-large() {
    .container & { width: 240px; }
  }
  +mobile() {
    position: relative;
    width: auto;
  }
}

.main {
  clearfix();
  +mobile() {
    padding-bottom: 100px;
  }
}

.container .main-inner {
  width: $main-desktop;
  +mobile() {
    width: auto;
  }
}

.content-wrap {
  float: right;
  box-sizing: border-box;
  padding: $content-desktop-padding;
  width: $content-desktop;
  background: white;

  +mobile() {
    width: auto;
    padding: 20px;
  }
}

.sidebar {
  position: static;
  float: left;
  margin-top: 300px;
  width: $sidebar-desktop;
  background: white;
  box-shadow: none;

  +mobile() {
    display: none;
  }
}

.sidebar-toggle { display: none; }

.sidebar-position-right {
  .header-inner { right: 0; }
  .content-wrap { float: left; }
  .sidebar { float: right; }
}
