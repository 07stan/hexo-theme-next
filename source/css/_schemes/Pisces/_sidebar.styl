.use-motion .sidebar .motion-element { opacity: 1; }

.sidebar-inner { color: $text-color; }

.site-author-image { border-color: $gainsboro; }
.site-author-name { color: $black-deep; }

.sidebar a {
  color: $black-light;
  &:hover { color: $black-deep; }
}

.site-state-item { border-color: $grey-dark; }

.links-of-author-item {
  a:before { display: none; }
  a {
    border-bottom: none;
    text-decoration: underline;
  }
}

.feed-link a {
  color: #fc6423;
  &:hover { color: white; }
}

.post-toc ol { padding: 0 20px 10px; }
