.page-archive {

  $left = 55px;
  $left-mobile = 30px;

  .archive-page-counter {
    position: relative;
    top: 3px;
    left: 70px;

    +mobile() {
      left: 50px;
    }
  }

  .archive-page-counter-number {
    font-weight: bold;
    font-style: italic;
  }

  .posts-collapse {
    position: relative;

    &::after {
      top: 20px;
      left: $left;
      margin-left: -2px;
      width: 4px;
      height: 100%;
      background: $colorWhiteSmoke;
      z-index: -1;

      +mobile() {
        left: $left-mobile;
      }
    }

    .archive-move-on {
      position: absolute;
      top: 11px;
      left: $left;
      margin-left: -5px;
      width: 10px;
      height: 10px;
      opacity: 0.5;
      background: $colorLightBlack;
      border: 1px solid white;

      circle();
      +mobile() {
        left: $left-mobile;
      }
    }

    &::before, &::after {
      content: " ";
      position: absolute;
    }
  }
}


