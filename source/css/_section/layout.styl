.header-inner {
  margin: 0 auto;
  padding: 100px 0 70px;
  width: $desktopMainWidth;
  .one-column & {
    width: $desktopContentWidth;
  }
}

.main-inner {
  margin: 0 auto;
  width: $desktopMainWidth;
  .one-column & {
    width: $desktopContentWidth;
  }

  .content {
    width: $desktopContentWidth;
  }

  .sidebar-toggle {
    position: fixed;
    right: 15px;
    top: 15px;
    width: 15px;
    padding: 5px;
    background: $colorDeepBlack;
    line-height: 0;
    z-index: 3;
  }
  .sidebar-toggle-line {
    position: relative;
    display: inline-block;
    vertical-align: top;
    height: 2px;
    width: 100%;
    background: white;
    margin-top: 3px;

    &:first-child {
      margin-top: 0;
    }
  }

  .sidebar {
    width: 0;
    position: fixed;
    right: 0;
    top: 0;
    bottom: 0;
    box-shadow: inset 0 2px 6px black;
    background: $colorDeepBlack;
  }
}

.footer-inner {
  margin 20px auto
  width $desktopMainWidth
  .one-column & {
    width $desktopContentWidth
  }
}
