
.header {
  background: $headerBackgroundColor;
  border-bottom: solid $headerBorderBottomWidth $headerBorderBottomColor;
}

.header-inner {
  position: relative;
  font-family: $fontFamilySans;
}

.brand {
  text-align: $brandTextAlignment;

  a {
    display: inline-block;
    padding: 2px 15px;
    text-align: center;
    color: $brandTextColor;
    background: $brandBackground
    border-bottom: none;
    font-family: $fontFamilySans;

    the-shape(15px, white, 2px);
  }

  .site-title {
    display: inline-block;
    vertical-align: top;
    line-height: 35px;
    text-transform: uppercase;
    font-size: 20px;
    font-weight: 300;
  }
}

.navigation {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
}

.navigation .navigation-item {
  display: inline-block;

  &:first-child {
    margin-right: 30px;
  }

  &::before {

  }

  a {
    display: block;
    color: $colorDeepBlack;
    font-size: 14px;
    text-decoration: none;
    text-transform: capitalize;
    border-bottom: 1px solid $colorDarkGray;

    &:hover {
      border-bottom-color: $colorDeepBlack;
    }
    &::before {
      content: "";
      display: block;
      margin: 0 auto;
      width: 16px;
      height: 16px;
      vertical-align: middle;

    }
  }
}

.navigation .navigation-item-home a::before{
  background: url("data:image/svg+xml;base64,") no-repeat 0 50%;
  background-size: 100% 100%;
}

.navigation .navigation-item-archives a::before{
  background: url("data:image/svg+xml;base64,") no-repeat 0 50%;
  background-size: 100% 100%;
}